{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://www.krakend.io/schema/flexible_config.json",
  "title": "Extended Flexible Configuration Schema",
  "description": "Schema validation for the latest version of Extended Flexible Configuration. Consider sticking to the specific version you are using",
  "examples": [
    {
      "settings": {
        "paths": [ "settings" ],
        "allow_overwrite": true,
        "dir_field_prefix": "",
        "allowed_suffixes": [ ".yaml", ".json" ]
      },
      "partials": {
        "paths": [ "partials" ]
      },
      "templates": {
        "paths": [ "templates" ]
      },
      "meta_key": "meta",
      "out": "result.json",
      "debug": false,
      "ref_key": "$ref"
    }
  ],
  "$ref": "v2.13/flexible_config.json"
}
